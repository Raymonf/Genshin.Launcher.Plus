<UserControl x:Class="GenShin_Launcher_Plus.Views.UsersPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GenShin_Launcher_Plus.Views"
             mc:Ignorable="d" 
             Height="730" Width="1280">
    <Grid Height="180" Width="380" Background="#FF647687">
        <GroupBox Header="{Binding languages.AddUsersPageTitle}">
            <Grid Background="White">
                <Label Content="{Binding languages.AddUsersPageSubTitle}" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Microsoft JhengHei UI"/>
                <TextBox FontSize="12" mah:TextBoxHelper.Watermark="{Binding languages.AddUsersPageTextboxTips}" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="169" Margin="158,54,0,0" FontFamily="Microsoft JhengHei UI"/>
                <Button FontSize="12" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Content="{Binding languages.SaveBtn}" HorizontalAlignment="Left" Margin="81,101,0,0" VerticalAlignment="Top" Width="80" Command="{Binding SaveUserDataCommand}" FontFamily="Microsoft JhengHei UI"/>
                <Button FontSize="12" Style="{DynamicResource MahApps.Styles.Button.Square}" Content="{Binding languages.Cancel}" HorizontalAlignment="Left" Margin="209,101,0,0" VerticalAlignment="Top" Width="80" FontFamily="Microsoft JhengHei UI" Command="{Binding RemoveThisPageCommand}"/>
                <ComboBox HorizontalAlignment="Left" Height="16" Margin="54,54,0,0" VerticalAlignment="Top" Width="99" FontFamily="Microsoft JhengHei UI" ItemsSource="{Binding GamePortLists}" DisplayMemberPath="GamePort" SelectedValuePath="GamePort" SelectedValue="{Binding GamePort}"/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
